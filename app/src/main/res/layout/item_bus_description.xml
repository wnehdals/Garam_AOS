<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="busType"
            type="com.jdm.garam.data.response.BusType" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background_color">
        <TextView
            android:id="@+id/item_bus_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@{busType.id}"
            tools:text="50-2"/>
        <TextView
            android:id="@+id/item_bus_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="터미널 노선 설명 "
            android:text="@{busType.description}"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_bus_description_start_station"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="출발 터미널 "
            android:layout_marginStart="16dp"
            android:text="@{busType.startStation}"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_bus_description_start_time"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_description"/>
        <TextView
            android:id="@+id/item_bus_description_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            tools:text="adsfgsdfghdghdgdg"
            android:text="@{busType.startStationTime}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_description"
            app:layout_constraintStart_toEndOf="@+id/item_bus_description_start_station"/>
        <View
            android:id="@+id/item_bus_description_divide_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_description_start_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray_prim_text_color"/>
        <TextView
            android:id="@+id/item_bus_description_end_station"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="@{busType.endStation}"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            tools:text="종점터미널 "
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_bus_description_end_time"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_description_divide_line"/>
        <TextView
            android:id="@+id/item_bus_description_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp"
            tools:text="adsfgsdfghdghdgdg"
            android:text="@{busType.endStationTime}"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_bus_description_divide_line"
            app:layout_constraintStart_toEndOf="@+id/item_bus_description_end_station"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>