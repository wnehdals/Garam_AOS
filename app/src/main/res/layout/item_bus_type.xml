<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_bus_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:outlineAmbientShadowColor="@color/blue_prim_text_color"
            android:outlineSpotShadowColor="@color/blue_prim_text_color"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="24dp"
            app:cardMaxElevation="36dp"
            app:contentPadding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_bus_type_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    tools:text="10-1"
                    android:textColor="@color/blue_prim_text_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/item_bus_type_description"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_bus_type_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/item_bus_type_id"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/bus_type_6"
                    android:textColor="@color/blue_prim_text_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_bus_type_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/blue_sub_text_color"
                    android:textSize="10sp"
                    android:text="@string/see_staion_list"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_bus_type_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/item_bus_type_detail"
                    app:layout_constraintTop_toBottomOf="@+id/item_bus_type_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="4dp"
                    tools:text="asdfafgsdgfdfhdfghdfghdfghdfghdfghdfghdfghdfghdfghdfghdfghdfgh"
                    android:textColor="@color/blue_prim_text_color"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/item_bus_type_divide_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/blue_prim_text_color"
                    app:layout_constraintTop_toBottomOf="@+id/item_bus_type_start_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/item_bus_type_detail"
                    android:layout_marginTop="6dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_bus_type_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_bus_type_divide_line"
                    app:layout_constraintEnd_toStartOf="@+id/item_bus_type_detail"
                    android:layout_marginStart="4dp"
                    tools:text="asdfafgsdgfdfh"
                    android:textColor="@color/blue_prim_text_color"
                    android:textSize="14sp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>