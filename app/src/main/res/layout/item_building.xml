<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_rect_stroke_blue500">

        <TextView
            android:id="@+id/building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:text="코아루타워아파트" />

        <View
            android:id="@+id/building_divide_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/blue_prim_text_color"
            app:layout_constraintTop_toBottomOf="@+id/building_name"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="24dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/building_constraintlayout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/building_divide_line_1"
            app:layout_constraintEnd_toStartOf="@+id/building_constraintlayout_right"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/building_create_at_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/buildCreateAt"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"


                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/building_create_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/building_create_at_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/building_create_at_title"/>
            <View
                android:id="@+id/building_divide_left_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/building_create_at_title"
                android:background="@color/blue_background_color"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/building_floor_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/floor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/building_divide_left_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp" />
            <TextView
                android:id="@+id/building_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/building_floor_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/building_floor_title"/>
            <View
                android:id="@+id/building_divide_left_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/building_floor_title"
                android:background="@color/blue_background_color"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/deposit_fee_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/deposit_fee"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/building_divide_left_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp" />
            <TextView
                android:id="@+id/deposit_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/deposit_fee_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/deposit_fee_title"/>
            <View
                android:id="@+id/building_divide_left_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/deposit_fee_title"
                android:background="@color/blue_background_color"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/building_dong_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/dong"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/building_divide_left_4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp" />
            <TextView
                android:id="@+id/building_dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="원덕읍 호산리"
                app:layout_constraintTop_toTopOf="@+id/building_dong_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/building_dong_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/building_constraintlayout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/building_divide_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/building_constraintlayout_left">
            <TextView
                android:id="@+id/building_deal_date_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/deal_date"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"


                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/building_deal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/building_deal_date_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/building_deal_date_title"/>
            <View
                android:id="@+id/building_divide_right_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/building_deal_date_title"
                android:background="@color/blue_background_color"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/monthly_fee_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/monthly_fee"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/building_divide_right_2"
                />
            <TextView
                android:id="@+id/monthly_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/monthly_fee_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/monthly_fee_title"/>
            <View
                android:id="@+id/building_divide_right_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/monthly_fee_title"
                android:background="@color/blue_background_color"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/building_size_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_prim_text_color"
                android:text="@string/building_size"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/building_divide_right_3"
                />
            <TextView
                android:id="@+id/building_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="2021.09.23"
                app:layout_constraintTop_toTopOf="@+id/building_size_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/building_size_title"/>
            <View
                android:id="@+id/building_divide_right_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/building_size_title"
                android:background="@color/blue_background_color"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/building_divide_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/blue_prim_text_color"
            app:layout_constraintTop_toBottomOf="@+id/building_constraintlayout_left"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>