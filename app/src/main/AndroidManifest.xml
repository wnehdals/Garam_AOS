<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdm.garam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GaramApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Garam"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.phonebook.PhoneBookActivity"
            android:theme="@style/Theme.Samso"
            android:exported="false" />
        <activity
            android:name=".ui.event.EventActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.realestate.RealEstateMainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LinkActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Samso" />
        <activity
            android:name=".ui.calendar.GaramCalendarActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9955048675507406~4603639274" />

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Samso" />
        <activity
            android:name=".ui.bus.station.BusStationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.bus.type.BusTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Samso">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>